{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "frontend/dist",
  "devCommand": "npm run dev",
  "installCommand": "npm install && cd frontend && npm install && cd ../backend && npm install",
  "framework": null,
  "rewrites": [
    {
      "source": "/api/todos/:path*",
      "destination": "/api/todos"
    },
    {
      "source": "/api/todo-types/:path*",
      "destination": "/api/todo-types"
    },
    {
      "source": "/api/reset/:path*",
      "destination": "/api/reset"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate, max-age=0"
        }
      ]
    }
  ]
}
